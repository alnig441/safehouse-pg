tabset(justified="true")
   tab(heading="Site Administration")

      .btn-group(dropdown is-open='status.isopen')
         button#single-button(type="button", class="btn btn-primary", dropdown-toggle, ng-diabled='disabled') Menu
            span.caret
         ul.dropdown-menu(role="menu", aria-labelledby="single-button")
            li.divider
            li(role="menuitem")
               a(ng-click='showAddAcctForm()') Add Account
            li(role="menuitem")
               a(ng-click='showDelAcctForm()') Delete Account
            li(role="menuitem")
               a(ng-click='showChgPWForm()') Change Password
            li.divider
            li(role="menuitem")
               a(ng-click='showAddEventForm()') Add Event
            li(role="menuitem")
               a(ng-click='showViewEventForm()') View Event

   #alerts

form#addAcct(ng-submit="addAcct()")
   label(for="username") Username:
   input(type="text" id="username", placeholder="Username", ng-model="form.username")
   label(for="password") Password:
   input(type="password" id="password", placeholder="Password", ng-model="form.password")
   label(for="acct_type") Account Type:
   select(name='acct_type', ng-model='form.acct_type')
      option(value="private") Private
      option(value="public") Public
   label(for="lang") Language:
   select(name='lang', ng-model='form.lang')
      option(value="da") Danish
      option(value="en") English
   input(type="submit", value="Submit")

form#delAcct(ng-submit='delAcct()')
   label(for='username') Username:
   input(type="text" id="username", placeholder="Username", ng-model="form.username")
   input(type="submit", value="Get Acct Info")

#viewAcct
   ul
      li Username: {{ form.username }}
      li Account Type: {{ form.acct_type }}
      li ID: {{ form.id }}
      li Language: {{ form.lang }}
      button(value='remove acct') Remove Account


form#chgPW(ng-submit='chgPW()')
   label(for='username') Username:
   input(type="text" id="username", placeholder="Username", ng-model="form.username")
   label(for="password") New Password:
   input(type="password" id="password", placeholder="Password", ng-model="form.new_password")
   label(for="password") Confirm Password:
   input(type="password" id="password", placeholder="Password", ng-model="form.confirm_password")
   input(type="submit", value="Get Acct Info")

form#addEvent(ng-submit='addEvent()')
   label(for='event') Event:
   input(type="textarea", id="event", placeholder="Event", ng-model="form.event")
   label(for='eventImg') Image URL:
   input(type='text', id='eventImg', placeholder='Path to image', ng-model='form.url')
   input(type="submit", value="Get Acct Info")

form#viewEvent(ng-submit='viewEvent()')
   label(for='event') Event:
   input(type="text", placeholder="Event", ng-model="form.username")
   button(type="submit", value="View Event", ng-click='getEventById()') Get Event
